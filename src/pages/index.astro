---
import { ScoreList } from "../components/ScoreList";
import { ScorePercent } from "../components/ScorePercent";
import { Title } from "../components/Title";
import Layout from "../layouts/Layout.astro";
---

<Layout title="한국 도시공원 평가 지수 - ParkScore">
  <main>
    <div>
      <Title
        title="ParkScore Index Custom Rankings"
        subtitle="Customize the weights of each scoring category"
      />
      <ScorePercent client:load />
      <ScoreList client:load />
    </div>
    <div class="section"></div>
  </main>
</Layout>

<style is:global>
  @import url(./reset.css);
  :root {
    --bg-primary: #008231;
    --bg-black: #1c1c1b;
    --bg-white: #ffffff;
  }
</style>

<style>
  :root {
    --parkscore-left-width: 8rem;
  }
  main {
    display: flex;
  }
  main > div {
    flex: 1;
    width: clac(100% - 6rem);
    padding: 3rem;
  }
  main > div:nth-child(2) {
    background-color: #f5f5f5;
  }
  @media screen and (max-width: 1200px) {
    main {
      display: block;
    }
  }
</style>
